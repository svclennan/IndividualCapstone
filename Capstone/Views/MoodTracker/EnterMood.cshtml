@model Capstone.Models.Mood
@{
    ViewData["Title"] = "EnterMood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EnterMood">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MoodRating" class="control-label">Rating (1-10)</label>
                <input asp-for="MoodRating" class="form-control" type="number" min="0" max="10" />
                <span asp-validation-for="MoodRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="EnterMood" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


